{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:ui1\" \"npm run dev:ui2\" \"npm run dev:ui3\" \"npm run dev:api\"",
    "dev:ui1": "npm run dev --workspace=@monorepo/ui1",
    "dev:ui2": "npm run dev --workspace=@monorepo/ui2",
    "dev:ui3": "npm run dev --workspace=@monorepo/ui3",
    "dev:api": "npm run dev --workspace=@monorepo/api",
    "build": "npm run build --workspaces",
    "build:ui1": "npm run build --workspace=@monorepo/ui1",
    "build:ui2": "npm run build --workspace=@monorepo/ui2",
    "build:ui3": "npm run build --workspace=@monorepo/ui3",
    "build:api": "npm run build --workspace=@monorepo/api",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
